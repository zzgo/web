    <!--表名 -->
    <sql id="tableName">
        USER
    </sql>
    <!-- 字段 -->
    <sql id="Field">
        user_id,
        user_name,
        user_pass
    </sql>
    <!-- 字段值 -->
    <sql id="FieldValue">
        #{id},
        #{name},
        #{pass}
    </sql>
    <!-- 添加 -->
    <insert id="saveUser" parameterType="com.zzgo.web.model.User">
        INSERT INTO
        <include refid="tableName"></include>
        (
