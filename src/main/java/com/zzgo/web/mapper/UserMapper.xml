    <!--表名 -->
    <sql id="tableName">
        USER
    </sql>
    <!-- 字段 -->
    <sql id="Field">
        USER_ID,
        USER_LOGINNAME,
        USER_PASSWORD,
        USER_LOGINCOUNT,
        USER_LASTLOGINTIME,
        USER_NAME,
        USER_SEX,
        USER_EMAIL,
        USER_TEL,
        USER_NOTE,
        USER_CREATETIME
    </sql>
    <!-- 字段值 -->
    <sql id="FieldValue">
        #{id},
        #{loginName},
        #{password},
        #{loginCount},
        #{lastLoginTime},
        #{name},
        #{sex},
        #{email},
        #{tel},
        #{note},
        #{createTime}
    </sql>
    <!-- 添加 -->
    <insert id="save" parameterType="com.zzgo.web.model.User">
        INSERT INTO
        <include refid="tableName"></include>
        (
        <include refid="Field"></include>
        )
        VALUE(
        <include refid="FieldValue"></include>
        )
    </insert>
    <!-- 删除 -->
    <delete id="delete" parameterType="Integer">
        DELETE FROM
        <include refid="tableName"></include>
        WHERE USER_ID = #{userId}
    </delete>


</mapper>